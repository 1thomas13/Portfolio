---
import { Image } from "astro:assets"
import "../styles/global.css"
import Aurora from "@/components/ui/Aurora"
import { getI18N } from "@/i18n"

const currentLocale = Astro.url.pathname.startsWith("/en/") ? "en" : "es"
const t = getI18N({ currentLocale })
const lang = currentLocale === "en" ? "en" : "es"
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{t.meta.title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=optional"
      rel="stylesheet"
    />
    <meta name="description" content={t.meta.description} />
    <meta name="author" content="Thomas Barreto" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={t.meta.title} />
    <meta property="og:description" content={t.meta.description} />
    <meta property="og:url" content={t.meta.siteUrl} />
    <meta property="og:site_name" content="Thomas Barreto Portfolio" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={t.meta.title} />
    <meta name="twitter:description" content={t.meta.description} />

    <link rel="canonical" href={t.meta.siteUrl} />
  </head>

  <body class="min-h-screen bg-black overflow-hidden">
    <main class="min-h-screen relative overflow-hidden">
      <div class="fixed inset-0 w-full h-full">
        <Aurora
          client:load
          colorStops={["#475569", "#64748b", "#475569"]}
          amplitude={1.2}
          blend={0.6}
          speed={0.8}
        />
      </div>
      <div class="relative z-10">
        <slot />
      </div>
    </main>
  </body>
</html>

<style>
  html {
    height: 100%;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue",
      Arial, sans-serif;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1 0 auto;
  }

  @media (max-width: 768px) {
    div[style*="border-radius: 50%"] {
      width: 400px;
      height: 400px;
      bottom: -200px;
      filter: blur(150px);
    }
  }
</style>
