---
import Contact from "@/components/Contact"
import GradientText from "../components/GradientText"
import { GlassmorphismNav } from "../components/Nav"
import Layout from "../layouts/Layout.astro"
import { ArrowDown, Heart, Github } from "lucide-react"
import Magnet from "../components/Magnent"
import TechStack from "@/components/TechStack"
import SpotlightCard from "@/components/SpotlightCard"
import { Experience } from "@/components/Experience"
import Projects from "@/components/Projects"
---

<Layout>
  <GlassmorphismNav />
  <section
    class="h-screen flex flex-col justify-center items-center px-4 text-white">
    <h1
      class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-bold text-balance mb-6 animate-fade-in-heading">
      Thomas Barreto
    </h1>
    <GradientText
      client:load
      colors={[
        "#D227FF",
        "#FF9FFC",
        "#D19EEF",
        "#ffffff",
        "#ffffff",
        "#ffffff",
      ]}>
      <h2 class="text-center text-4xl sm:text-5xl font-semibold px-4">
        Software developer
      </h2>
    </GradientText>
    <Magnet client:load padding={1500} disabled={false} magnetStrength={100}>
      <button
        class={`relative bg-white hover:bg-gray-50 text-black font-medium px-6 py-3 rounded-full flex items-center transition-all duration-300 hover:scale-105 hover:shadow-lg cursor-pointer group transform 
      mt-8`}>
        View CV
      </button>
    </Magnet>
    <ArrowDown class="w-16 h-16 text-white mt-12 animate-bounce" />
  </section>
  <section class="py-12 md:py-24 lg:py-32 w-full m-auto max-w-5xl">
    <div class="px-4 md:px-6">
      <h2
        class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-12 text-center">
        About me
      </h2>
      <SpotlightCard
        client:load
        className="custom-spotlight-card h-32"
        spotlightColor="rgba(0, 229, 255, 0.2)"
      />
    </div>
  </section>
  <section class="py-12 md:py-24 lg:py-32 w-full m-auto max-w-5xl">
    <div class="px-4 md:px-6">
      <h2
        class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl mb-12 text-center">
        Tech Stack
      </h2>
      <TechStack client:load />
    </div>
  </section>
  <Experience client:load />
  <Projects client:load />

  <Contact client:load />
  <footer
    class="mt-24 group relative w-full flex items-center justify-center bg-white/10 backdrop-blur-md border border-white/20 px-4 py-3 md:px-6 md:py-2">
    <div class="flex items-center gap-1">
      Made with
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="14"
        height="14"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="3"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-white fill-transparent transition-all duration-300 group-hover:text-red-500 group-hover:fill-red-500">
        <path
          d="M20.8 4.6a5.5 5.5 0 0 0-7.8 0L12 5.6l-1-1a5.5 5.5 0 0 0-7.8 7.8l1 1L12 21l7.8-7.6 1-1a5.5 5.5 0 0 0 0-7.8z"
        ></path>
      </svg>
      by Thomas Barreto
    </div>

    <a
      href="https://github.com/tuusuario/turepo"
      target="_blank"
      rel="noopener noreferrer"
      class="absolute right-4 md:right-6 text-sm text-white/80 hover:text-white transition">
      View source code
    </a>
  </footer>
</Layout>
